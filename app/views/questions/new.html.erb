<%= include_gon %>
<div class='row text-center'>
  <h1 class='page-heading'>What question would you like to explore?</h1>
</div>
<div class='row text-center'>
  <div class="columns large-12 text-center">
      <label>
        <textarea class='question-box' placeholder="If you could learn anything, what would it be?"></textarea>
      </label>
  </div>
  <%= link_to "Group Hive", user_questions_path, method: "post", class: "button sub q-button", id: "group-hive" %>
  <%= link_to "Solo Hive", user_questions_path, method: "post", class: "button sub q-button", id: "solo-hive" %>
    <%= link_to "Hive Home", user_hives_path, method: "get", class: "button sub q-button", id: "hive-home" %>
</div>
<div class='row'>
  <div class='columns large-12 large-centered horiz-line'>
    <hr class="horiz-line">
  </div>
</div>
<div class='row'>
  <h3 class='tq-title'>Today's Most Buzzing Hives:</h3>
</div>
<div class='row'>
  <%= render @hives %>
</div>